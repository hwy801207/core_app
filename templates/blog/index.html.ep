% layout 'default';
% title 'Welcome';

% for my $article (@{$articles}) {
<div class="row">
	<div class="col-lg-12 content">
    <h4><%= $article->{title} %></h4>
    <div>
        % for my $tag (@{$article->{'tags'}}) {
        <a href="#"><%= $tag->{'name'} %></a>
        %}
    </div>
    <p><%= $article->{content} %></p>
    <a href="/blog/<%= $article->{id} %>">Read More</a>
	</div>
</div>
%}
%= include 'blog/side'
